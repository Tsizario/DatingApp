@model AppUserRegisterDto
@{
    ViewBag.Title = "Register";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

    <h2 class="text-center my-4">@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card card-body bg-light">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" class="form-control" type="text" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="mt-3 me-2">
                            <button class="btn btn-outline-success" type="submit">
                                Register
                            </button>
                        </div>
                        <div class="mt-3">
                            <a class="btn btn-outline-danger" type="submit"
                           asp-controller="Account"
                           asp-action="Cancel">
                                Cancel
                            </a>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group text-success">@TempData["Error"]</div>            
                </form>
            </div>
        </div>
    </div>
