<!DOCTYPE html>
<html>
<head>
    <title>Bingo! - @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Head", false)
</head>
<body>
    <header class=" bg-dark">
        <nav class="navbar navbar-expand-md navbar-dark">
            <div class="container">
                <a class="navbar-brand fs-3" asp-controller="App" asp-action="Index">
                    <i class="fa-regular fa-heart me-1"></i>
                        Bingo!
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#theMenu" aria-expanded="false" aria-controls="theMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="theMenu" class="collapse navbar-collapse">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav fs-5">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="App" asp-action="Index">Messages</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="App" asp-action="About">Matches</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="App" asp-action="Contact">Other people</a>
                            </li>
                        </ul>
                    }
                </div>
                <div class="float-end me-3">
                    <ul class="navbar-nav fs-3">
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    Logout
                                </a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fa-solid fa-right-to-bracket"></i>
                                    Login
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </section>
    <footer class="border-top footer text-muted opacity-100">
        <div class="container">
            &copy; 2022 - Bingo! - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>